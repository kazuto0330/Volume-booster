{
  "manifest_version": 3,
  "name": "Volume Booster",
  "version": "1.0.10.1",
  "description": "特定のWebサイトの音量を10%から600%までブーストします。サイトごとに設定を保存したり、現在のタブだけ一時的に変更したりできます。",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Volume Booster",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
